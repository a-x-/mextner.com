# Caddyfile for mextner.com

# Redirect www to non-www
www.mextner.com {
    redir https://mextner.com{uri} permanent
}

# Main site configuration
mextner.com {
    # Document root
    root * /var/www/mextner.com

    # Enable file server
    file_server

    # Enable gzip compression
    encode gzip

    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        
        # Enable XSS filter
        X-XSS-Protection "1; mode=block"
        
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Permissions policy
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        
        # Remove server header
        -Server
    }

    # Handle clean URLs for Hugo
    try_files {path} {path}.html {path}/

    # Custom 404 page
    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        rewrite @404 /404.html
        file_server
    }

    # Cache static assets
    @static {
        path *.css *.js *.jpg *.jpeg *.png *.gif *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static {
        Cache-Control "public, max-age=31536000, immutable"
    }

    # Cache HTML for a shorter time
    @html {
        path *.html
    }
    header @html {
        Cache-Control "public, max-age=3600, must-revalidate"
    }

    # Log configuration
    log {
        output file /var/log/caddy/mextner.com.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format console
    }
}